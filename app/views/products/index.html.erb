<script src="//code.jquery.com/jquery-1.6.4.js"></script>
<%= javascript_include_tag "application" %>
<%= javascript_include_tag "product" %>
<%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= javascript_include_tag "application" %>
<%- model_class = Product -%>
<%=link_to 'Create New Product', new_product_path, :class => 'btn btn-primary product-create', :style => "float:right;"%>
<div class="page-header">
  <h1><%=t '.title', :default => "Choose Products" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-1"><%= model_class.human_attribute_name(:id) %></th>
      <th class="col-md-1"><%= model_class.human_attribute_name(:title) %></th>
      <th class="col-md-1"><%= model_class.human_attribute_name(:description) %></th>
      <th class="col-md-1"><%= model_class.human_attribute_name(:price) %></th>
      <th class="col-md-1"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="col-md-2"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.created_at.strftime("%m/%d/%Y") %></td>
        <td class="col-md-2">
        <%= link_to 'choose', '#', :onclick=>"check_prod(#{product.id});return false;" ,:class => 'btn btn-primary'%>
                <%= check_box_tag "check_#{product.id}", product.id %>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-primary' %>
          <%= button_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Create Order','#', :onclick=>"create_order();return false;" ,:class => 'btn btn-primary'%>


