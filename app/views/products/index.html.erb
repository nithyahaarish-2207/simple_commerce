<%= javascript_include_tag "product" %>
<%- model_class = Product -%>
			 <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Product Listing <small>Create your order here</small>
                        </h1>
                    </div>
                </div> 
                 <!-- /. ROW  -->
               
            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             Product
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                      <tr>
                                        <th><%= model_class.human_attribute_name(:id) %></th>
                                        <th><%= model_class.human_attribute_name(:title) %></th>
                                        <th><%= model_class.human_attribute_name(:description) %></th>
                                        <th><%= model_class.human_attribute_name(:price) %></th>
                                        <th><%= model_class.human_attribute_name(:created_at) %></th>
                                        <th><%="Choose Product" %></th>
                                        <th><%="Edit Product" %></th>
                                        <th><%="Delete Product" %></th>
                                     </tr>
                                    </thead>
                                    <tbody>
                                        <% @products.each do |product| %>
                                            <tr class="odd gradeX">
                                              <td><%= product.id %></td>
                                              <td><%= product.title %></td>
                                              <td><%= product.description %></td>
                                              <td><%= product.price %></td>
                                              <td><%= product.created_at.strftime("%m/%d/%Y") %></td>
                                              <td><%= link_to 'choose', '#', :onclick=>"check_prod(#{product.id});return false;" ,:class => 'btn btn-mini btn-primary'%> <%= check_box_tag "check_#{product.id}", product.id%></td>
                                              <td><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(product), :class => 'btn btn-primary' %></td>
                                              <td><%= button_to t('.destroy', :default => t("helpers.links.destroy")), product_path(product), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %></td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
<%= link_to 'Create Order','#', :onclick=>"create_order(#{session[:user_id]});return false;" ,:class => 'btn btn-primary'%>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
            </div>
                <!-- /. ROW  -->
    <%=javascript_include_tag "jquery.metisMenu.js" %>

