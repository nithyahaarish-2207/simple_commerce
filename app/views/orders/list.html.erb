<%- model_class = Order -%>
			 <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Order Listing <small>View all order and fulfill when completed</small>
                        </h1>
                    </div>
                </div> 
                 <!-- /. ROW  -->
               
            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             Order
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                      <tr>
                                        <th><%= "Order Id" %></th>
                                        <th><%= model_class.human_attribute_name(:status) %></th>
                                        <th><%= "Total Price" %></th>
                                        <th><%= "Created At" %></th>
                                        <th><%="Fulfill Order" %></th>
                                        <th><%="View Order" %></th>
                                        <th><%="Delete Order" %></th>
                                     </tr>
                                    </thead>
                                    <tbody>
                                      <% @orders.each do |order| %>
                                        <tr>
                                        <td><%= order.id %></td>
                                        <td><%= order.status ? "Fulfilled" : "Unfulfilled" %></td>
                                        <td><%= order.total_price %></td>
                                        <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
                                        <td><%=order.status ? "Completed" : (link_to "Fulfill Order", edit_order_path(order), :class => 'btn btn-primary')%></td>
                                        <td><%=link_to "View", view_order_path(order), :class => 'btn btn-primary'%></td>
                                        <td><%= button_to t('.destroy', :default => t("helpers.links.destroy")),order_path(order), :method => 'delete', :class => 'btn btn-danger'  unless order.status %></td>
                                        </tr>
                                      <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
            </div>
                <!-- /. ROW  -->
    <%=javascript_include_tag "jquery.metisMenu.js" %>
